#!/bin/bash


add() {
  local result=$(( $1 + $2 ))
  echo "Addition: $1 + $2 = $result"
}


subtract() {
  local result=$(( $1 - $2 ))
  echo "Subtraction: $1 - $2 = $result"
}


multiply() {
  local result=$(( $1 * $2 ))
  echo "Multiplication: $1 * $2 = $result"
}


divide() {
  if (( $2 == 0 )); then
    echo "Error: Division by zero is not allowed."
  else
    local result=$(awk "BEGIN {printf \"Division: %.2f\", $1 / $2}")
    echo "$1 / $2 = $result"
  fi
}


read -p "Enter the first number: " num1
read -p "Enter the second number: " num2


add $num1 $num2
subtract $num1 $num2
multiply $num1 $num2
divide $num1 $num2
