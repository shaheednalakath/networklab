#!/bin/bash

# Input the name of the state
read -p "Enter the name of an Indian state: " state

# Convert the state name to lowercase for case-insensitive comparison
state_lc=$(echo "$state" | tr '[:upper:]' '[:lower:]')

# Use case..esac to match the state and display the main language
case "$state_lc" in
  "andhra pradesh")
    echo "Main Language: Telugu"
    ;;
  "assam")
    echo "Main Language: Assamese"
    ;;
  "bihar")
    echo "Main Language: Hindi"
    ;;
  "himachal pradesh")
    echo "Main Language: Hindi"
    ;;
  "karnataka")
    echo "Main Language: Kannada"
    ;;
  "kerala")
    echo "Main Language: Malayalam"
    ;;
  "lakshadweep")
    echo "Main Language: Malayalam"
    ;;
  *)
    echo "Main Language: Unknown"
    ;;
esac
